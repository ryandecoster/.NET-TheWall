<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
    <title>The Wall</title>
    @model TheWall.Models.User
</head>
<body>
    <nav class="navbar sticky-top navbar-dark bg-dark">
        <span class="navbar-brand">The Wall</span>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class='nav-link' href="/">Home</a>
            </li>
            <li class="nav-item">
                <a class='nav-link' href="/">Register</a>
            </li>
            <li class="nav-item">
                <a class='nav-link active' href="/login/user">Login</a>
            </li>
        </ul>
    </nav><br>
    <h1>Login</h1>
        <table>
        <form class="form" asp-action="login" asp-controller="User" method="post">
            <tr>
                <td><label asp-for="Email">Email:</label></td>
                <td><input asp-for="Email" type="text" name="Email"></td>
                <td><span asp-validation-for="Email"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Password">Password:</label></td>
                <td><input asp-for="Password" type="password" name="Password"></td>
                <td><span asp-validation-for="Password"></span></td>
            </tr>
            <tr>
                <td><button class="btn btn-success">Login</button></td>
            </tr>
        </form>
    </table>
</body>
<style>
    td{
        padding: 0px 10px;
    }
    table{
        border-collapse: separate;
        border-spacing: 15px;
    }
    span {
        color: red;
    }
    body{
        padding: 0px;
    }
    .navbar-nav .nav-link{
        padding-right: 40px;
    }
    .navbar-nav{
        flex-direction: row;
    }
</style>
</html>
